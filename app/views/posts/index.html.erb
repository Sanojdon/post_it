
<%= link_to 'New Post', new_post_path %><br>
 <div id="pins">
<% @posts.each do |post| %>
  <div class="box">
    <%= link_to image_tag(post.image.url(:medium)), post %><br>
    <%= post.title %><br>
    <%= post.tags %><br>
    <%= post.user.name %><br>
    <% if post.user == current_user %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end  %>
  </div>
  <br>
  <br>
<% end %>
</div>


